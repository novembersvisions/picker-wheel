<AnswerInput>:
    y: 200
    minimum_width: 300
    textinput: textinput
    BoxLayout:
        orientation: "vertical"
        height: "200px"
        size_hint_y: None
        TextInput:
            size_hint_x: 0.5
            size_hint_y: 0.8
            focus: True
            id: textinput
        Button:
            text: "Generate Wheel"
            on_press: root.pressed()
            background_color: "blue"
            font_size: 15
            size_hint_x: 0.5
            size_hint_y: 0.2